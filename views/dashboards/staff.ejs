<!DOCTYPE html>
<html>
  <head>
    <title>Staff Dashboard</title>
  </head>
  <body>
    <h2>My Exam Duties</h2>

    <% if (assignments.length === 0) { %>
    <p>No exam duties assigned.</p>
    <% } else { %>
    <table border="1">
      <tr>
        <th>Exam</th>
        <th>Date</th>
        <th>Session</th>
        <th>Classroom</th>
        <th>Action</th>
      </tr>

      <% assignments.forEach(a => { %>
      <tr>
        <td><%= a.title %></td>
        <td><%= a.exam_date %></td>
        <td><%= a.session %></td>
        <td><%= a.classroom %></td>
        <td>
          <a
            href="/staff/exams/<%= a.exam_id %>/classrooms/<%= a.classroom_id %>/attendance"
          >
            Mark Attendance
          </a>
        </td>
      </tr>
      <% }) %>
    </table>
    <% } %>
  </body>
</html>
